  "homepage": "https://github.com/martini97/typesearch#readme",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.7",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "prettier": "3.3.3",
